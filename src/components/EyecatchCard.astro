---
import { Image } from "astro:assets";

type Props = {
  id: string;
  eyecatch: {
    url: string;
    height: number;
    width: number;
  };
  eyecatch_alt: string;
  title: string;
  tags: {
    id: string;
    createdAt: string;
    updatedAt: string;
    publishedAt: string;
    revisedAt: string;
    name: string;
  }[];
  publishedAt: string;
};
const { id, eyecatch, eyecatch_alt, title, tags, publishedAt } = Astro.props;
---

<article
  class="w-auto border rounded-lg hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-md duration-200 ease-in-out dark:border-zinc-700"
>
  <a href=`/blog/${id}` class="block h-full">
    <Image
      class="py-4 mx-auto"
      src={eyecatch.url}
      alt={eyecatch_alt}
      width="100"
      height="100"
    />
    <div
      class="flex flex-col justify-between border-t px-5 py-2 h-40 dark:border-zinc-700"
    >
      <h3 class="text-base font-bold dark:text-slate-50">
        {title}
      </h3>
      <div>
        <p class="mb-1 text-sm dark:text-slate-50">
          {
            new Date(publishedAt).toLocaleDateString("ja-JP", {
              year: "numeric",
              month: "short",
              day: "numeric",
            })
          }
        </p>
        {
          tags.length > 0 &&
            tags.map(tag => (
              <span class="px-2 py-1 mr-1 text-xs font-semibold rounded-2xl border dark:text-slate-50 dark:border-zinc-700">
                {tag.name}
              </span>
            ))
        }
      </div>
    </div>
  </a>
</article>
